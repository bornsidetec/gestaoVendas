unit uCalculos;

interface

type
  TCalculos = class
  public
    { public declarations }
    class function Valor(iQuantidade: Integer; dValor: Double): Double;
    class function Total(dAliquota, dValor: Double): Double;
  end;

implementation

{ TCalculos }

class function TCalculos.Total(dAliquota, dValor: Double): Double;
begin
  Result := dValor * (1 + (dAliquota / 100));
end;

class function TCalculos.Valor(iQuantidade: Integer; dValor: Double): Double;
begin
  Result := iQuantidade * dValor;
end;

end.
