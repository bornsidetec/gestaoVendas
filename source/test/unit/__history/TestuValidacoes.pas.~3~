unit TestuValidacoes;
{

  Delphi DUnit Test Case
  ----------------------
  This unit contains a skeleton test case class generated by the Test Case Wizard.
  Modify the generated code to correctly setup and call the methods from the unit
  being tested.

}

interface

uses
  TestFramework, uValidacoes, System.SysUtils;

type
  // Test methods for class TValidacoes

  TestTValidacoes = class(TTestCase)
  strict private
    FValidacoes: TValidacoes;
  public
    procedure SetUp; override;
    procedure TearDown; override;
  published
    procedure TestValidaDatasCenario1;
  end;

implementation

procedure TestTValidacoes.SetUp;
begin
  FValidacoes := TValidacoes.Create;
end;

procedure TestTValidacoes.TearDown;
begin
  FValidacoes.Free;
  FValidacoes := nil;
end;

procedure TestTValidacoes.TestValidaDatasCenario1;
const
  bEsperado: Boolean = False;
var
  bAtual: Boolean;
  dData2: TDateTime;
  dData1: TDateTime;
  sErro: string;
  sData2: string;
  sData1: string;
begin
  sData1 := '01/09/2021';
  sData2 := '01/08/2021';
  bAtual := FValidacoes.ValidaDatas(sData1, sData2, sErro, dData1, dData2);
  Check(((bEsperado = bAtual) and
    (sErro = 'Data Inicial maior que a data Final')) = False,
    'Erro na validação de Datas, Data1 maior que Data2');

end;

initialization

// Register any test cases with the test runner
RegisterTest(TestTValidacoes.Suite);

end.
